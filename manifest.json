{
  "manifest_version": 3,
  "name": "Titech Auto-Login",
  "version": "1.0.0",

  "icons": { "128": "icon128.png" },

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "https://portal.nap.gsic.titech.ac.jp/*"
  ],

  "background": { "service_worker": "service-worker.js" },

  "content_scripts": [
    {
      "matches": ["https://portal.nap.gsic.titech.ac.jp/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "options_page": "options.html",

  "action": { "default_title": "Titech Auto-Login" }
}
